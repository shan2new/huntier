{
  "manifest_version": 3,
  "name": "Huntier",
  "description": "Fill and save job applications seamlessly.",
  "version": "0.1.0",
  "icons": {
    "16": "logo192.png",
    "32": "logo192.png",
    "48": "logo512.png",
    "128": "logo512.png"
  },
  "action": {
    "default_title": "Huntier",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo512.png",
      "128": "logo512.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://huntier.pro/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "crawler.js",
        "network-hook.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}


